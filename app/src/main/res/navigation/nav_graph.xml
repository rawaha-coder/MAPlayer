<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/NavMusicLibrary">

    <fragment
        android:id="@+id/NavMusicLibrary"
        android:name="com.hybcode.maplayer.musiclibrary.MusicLibraryFragment"
        android:label="@string/music_library_screen_label"
        tools:layout="@layout/fragment_music_library" />

    <fragment
        android:id="@+id/NavAllSongs"
        android:name="com.hybcode.maplayer.allsongs.AllSongsFragment"
        android:label="@string/music_library_screen_label"
        tools:layout="@layout/fragment_all_songs"
        />

    <fragment
        android:id="@+id/NavPlayListsLibrary"
        android:name="com.hybcode.maplayer.playlists.PlayListsFragment"
        android:label="@string/music_library_screen_label"
        tools:layout="@layout/fragment_play_lists" />

    <fragment
        android:id="@+id/NavAlbumsLibrary"
        android:name="com.hybcode.maplayer.albums.AlbumsFragment"
        android:label="@string/music_library_screen_label"
        tools:layout="@layout/fragment_albums" />

    <fragment
        android:id="@+id/NavArtistsLibrary"
        android:name="com.hybcode.maplayer.artists.ArtistsFragment"
        android:label="@string/music_library_screen_label"
        tools:layout="@layout/fragment_artists" />

    <action
        android:id="@+id/action_NavMusicLibrary_to_NavAllSongs"
        app:destination="@id/NavAllSongs" />
    <action
        android:id="@+id/action_NavMusicLibrary_to_NavAlbumsLibrary"
        app:destination="@id/NavAlbumsLibrary" />
    <action
        android:id="@+id/action_NavMusicLibrary_to_NavPlayListsLibrary"
        app:destination="@id/NavPlayListsLibrary" />
    <action
        android:id="@+id/action_NavMusicLibrary_to_NavArtistsLibrary"
        app:destination="@id/NavArtistsLibrary" />

</navigation>